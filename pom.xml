                    <include>image/fruits/unripPearGreen.png</include>
                    <include>image/fruits/unripPearYellow.png</include>
                    <include>image/fruits/unripSmallAppleGreen.png</include>
                    <include>image/fruits/unripSmallAppleRed.png</include>
                    <include>image/background.png</include>
                    <include>image/logo.png</include>
